# Supabase Database Configuration
# Copy this file to .env and fill in your actual credentials
# DO NOT commit .env file to git (it's in .gitignore)

# Database Connection
DB_HOST=your-project-ref.supabase.co
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=your-database-password

# Supabase API
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-anon-public-key
SUPABASE_SERVICE_KEY=your-service-role-secret-key

# Application Settings
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000

# Stripe Payment Gateway (PRODUCTION READY)
STRIPE_ENABLED=false
STRIPE_MODE=test
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal Payment Gateway (PRODUCTION READY)
PAYPAL_ENABLED=false
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=your_client_id_here
PAYPAL_CLIENT_SECRET=your_client_secret_here
PAYPAL_WEBHOOK_ID=your_webhook_id_here

# ===== PHILIPPINE PAYMENT GATEWAYS (RECOMMENDED) =====

# PayMongo - Supports GCash, GrabPay, Cards, Bank Transfers
# Sign up: https://dashboard.paymongo.com
PAYMONGO_ENABLED=false
PAYMONGO_PUBLIC_KEY=pk_test_your_key_here
PAYMONGO_SECRET_KEY=sk_test_your_key_here
PAYMONGO_WEBHOOK_SECRET=whsec_your_webhook_secret

# Xendit - Supports GCash, PayMaya, Cards, Online Banking
# Sign up: https://dashboard.xendit.co
XENDIT_ENABLED=false
XENDIT_SECRET_KEY=xnd_test_your_key_here
XENDIT_PUBLIC_KEY=xnd_public_test_your_key_here
XENDIT_WEBHOOK_TOKEN=your_webhook_token

# GCash Direct (For Large Merchants Only - Requires Business Agreement)
# Contact: business@gcash.com
GCASH_ENABLED=false
GCASH_MERCHANT_ID=your_merchant_id
GCASH_API_KEY=your_api_key
GCASH_API_SECRET=your_api_secret
GCASH_API_URL=https://api.gcash.com/v1
GCASH_WEBHOOK_SECRET=your_webhook_secret

# Payment Settings
DEFAULT_PAYMENT_GATEWAY=stripe
PAYMENT_RETRY_ATTEMPTS=3
PAYMENT_RETRY_DELAY=2
PAYMENT_TIMEOUT=30
LOG_PAYMENT_TRANSACTIONS=true
PAYMENT_LOG_LEVEL=info
